<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sara.hellomoon.HelloMoonFragment">


    <ImageView
        android:src="@drawable/armstrong_on_moon"
        android:contentDescription="@string/hellomoon_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_margin="3dp"
        android:layout_weight="1"

        />


    <TableRow>
        <Button
            android:id="@+id/playButton"
            android:text="@string/hellomoon_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            style="?android:attr/buttonBarButtonStyle"
            />
        <Button
            android:id="@+id/stopButton"
            android:text="@string/hellomoon_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            style="?android:attr/buttonBarButtonStyle"
            />

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/pauseButton"
            android:text="@string/hellomoon_pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            style="?android:attr/buttonBarButtonStyle"
            />
    </TableRow>


</TableLayout>
